{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "sourceMap": true,
        "strict": true,
        "lib": ["esnext"],
        "esModuleInterop": true,
        "target": "es5",
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
