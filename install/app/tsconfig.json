{
    "compilerOptions": {
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strict": true,
        "noImplicitAny": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "@schemas/*": [".vape/generated/schemas/objects/*"],
            "@actions/*": ["actions/*"],
            "@modules/*": ["modules/*"],
            "@database/*": ["database/*"],
            "@resources/*": ["resources/*"],
            "@api/*": ["api/*"],
            "@vape/*": [".vape/*"],
            "@/*": [".vape/*"],
            "~/*": ["./*"]
        }
    }
}
