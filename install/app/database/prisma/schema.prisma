datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model users {
  id                  Int         @id @default(autoincrement())
  created_at          DateTime    @default(now())
  last_name           String
  first_name          String
  phone               String?
  password            String
  email               String      @unique
  role                String
  active              Boolean     @default(true)
  deleted             Boolean     @default(false)
}